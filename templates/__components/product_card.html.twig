<a class="product" href="/">
    <div class="product__top-row d-flex justify-content-between">
        <div class="product__fav-btn active"></div>
        <div class="product__badge">-22%</div>
    </div>

    <div class="product__inner">
        <div class="product__inner-img-wrap">
            <img class="product__img" src="{{ product.image? asset(product.image) : "img/nophoto.jpg" }}">
        </div>
        <div class="product__inner-name">
            {{ product.name }} {{ product.ID }}
        </div>
        <div class="product__inner-rating-wrap">
            {% include '__components/rating-stars.html.twig' with {"rating" : "4"} %}
        </div>
        <div class="product__price_and_2cart d-flex justify-content-between align-items-end">
            <div class="product__prices-block">
                <div class="product__card-old-price">1999 ₽</div>
                <div class="product__card-final-price">{{ product.price }} ₽</div>
            </div>
            <div class="product__add2cart-btn"></div>
        </div>
    </div>
</a>
